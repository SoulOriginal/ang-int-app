  "tailwindCSS.classAttributes": [
    "class:list",
    "class",
    "className",
    "ngClass",
    "[\\s\\S]*Classes[\\s\\S]*"
  ],
  "tailwindCSS.experimental.classRegex": [
    "class:\\s'([^`]*)'"
  ],
  "tailwindCSS.validate": true,
  // "editor.rulers": [
